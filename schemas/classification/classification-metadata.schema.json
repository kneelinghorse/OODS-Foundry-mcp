{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://trait-engine.dev/schemas/classification/metadata",
  "title": "ClassificationMetadata",
  "description": "Operational metadata describing classification execution parameters and governance state.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["taxonomy", "tag", "hybrid"],
      "default": "hybrid"
    },
    "hierarchyStorageModel": {
      "type": "string",
      "enum": ["adjacency_list", "materialized_path", "closure_table"],
      "default": "materialized_path"
    },
    "tagPolicy": {
      "type": "string",
      "enum": ["locked", "moderated", "open"],
      "default": "moderated"
    },
    "tagLimit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 200,
      "default": 10
    },
    "primaryCategoryRequired": {
      "type": "boolean",
      "default": false
    },
    "taxonomyVersion": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "lastIndexedAt": {
      "type": "string",
      "format": "date-time"
    },
    "governance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "synonymsEnabled": {
          "type": "boolean",
          "default": true
        },
        "moderationQueue": {
          "type": "boolean",
          "default": true
        },
        "spamHeuristics": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "maxTagsPerItem": {
              "type": "integer",
              "minimum": 1,
              "maximum": 200,
              "default": 20
            },
            "velocityThreshold": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            }
          },
          "required": ["maxTagsPerItem", "velocityThreshold"]
        }
      },
      "required": ["synonymsEnabled", "moderationQueue", "spamHeuristics"]
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dataset": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        },
        "version": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "required": [
    "mode",
    "hierarchyStorageModel",
    "tagPolicy",
    "tagLimit",
    "primaryCategoryRequired",
    "governance",
    "source"
  ]
}
