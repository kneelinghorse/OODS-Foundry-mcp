{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://oods.dev/schemas/viz/sankey-input.schema.json",
  "title": "Sankey Flow Input",
  "description": "Node/link input contract for Sankey and flow diagrams.",
  "type": "object",
  "required": ["nodes", "links"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/definitions/SankeyNode" },
      "description": "List of flow nodes keyed by name."
    },
    "links": {
      "type": "array",
      "items": { "$ref": "#/definitions/SankeyLink" },
      "description": "Links describing flow between named nodes."
    }
  },
  "definitions": {
    "SankeyNode": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Node label used for link references."
        }
      },
      "additionalProperties": true
    },
    "SankeyLink": {
      "type": "object",
      "required": ["source", "target", "value"],
      "properties": {
        "source": {
          "type": "string",
          "minLength": 1,
          "description": "Source node name."
        },
        "target": {
          "type": "string",
          "minLength": 1,
          "description": "Target node name."
        },
        "value": {
          "type": "number",
          "description": "Magnitude of flow (required for Sankey)."
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
