{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://trait-engine.dev/schemas/classification/category-node",
  "title": "CategoryNode",
  "type": "object",
  "description": "Canonical taxonomy node representation supporting taxonomy + hybrid classification modes.",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 64,
      "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
    },
    "slug": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80,
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 160
    },
    "description": {
      "type": "string",
      "minLength": 4,
      "maxLength": 320
    },
    "parentId": {
      "type": ["string", "null"],
      "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
    },
    "ltreePath": {
      "type": "string",
      "pattern": "^[a-z0-9_]+(?:\\.[a-z0-9_]+)*$"
    },
    "depth": {
      "type": "integer",
      "minimum": 0,
      "maximum": 64
    },
    "ancestors": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
      },
      "maxItems": 32,
      "default": []
    },
    "childCount": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100000,
      "default": 0
    },
    "isSelectable": {
      "type": "boolean",
      "default": true
    },
    "synonyms": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "maxItems": 32,
      "default": []
    },
    "mode": {
      "type": "string",
      "enum": ["taxonomy", "tag", "hybrid"]
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        },
        "externalId": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        },
        "sortKey": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000
        }
      }
    }
  },
  "required": ["id", "slug", "name", "ltreePath", "depth", "ancestors", "childCount", "isSelectable", "synonyms", "mode"]
}
