{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OODS Diagnostics",
  "type": "object",
  "additionalProperties": true,
  "required": ["schemaVersion", "createdAt", "tool", "runId", "summary"],
  "properties": {
    "schemaVersion": { "type": "string" },
    "createdAt": { "type": "string" },
    "sprint": { "type": ["string", "null"] },
    "runId": { "type": "string" },
    "tool": { "type": "string" },
    "summary": { "type": "string" },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "brandA": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "aaPassPct": { "type": ["integer", "null"] },
        "aaPairsTotal": { "type": ["integer", "null"] },
        "deltaGuardrails": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "maxDeltaL": { "type": ["number", "null"] },
            "maxDeltaC": { "type": ["number", "null"] },
            "ok": { "type": ["boolean", "null"] }
          }
        },
        "hcPngCount": { "type": ["integer", "null"] },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "vrt": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "totalStories": { "type": ["integer", "null"] },
        "darkCount": { "type": ["integer", "null"] },
        "allowlistCount": { "type": ["integer", "null"] },
        "flakePct": { "type": ["number", "null"] },
        "runUrl": { "type": ["string", "null"] }
      }
    },
    "inventory": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "components": { "type": ["integer", "null"] },
        "stories": { "type": ["integer", "null"] }
      }
    },
    "tokens": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "buildMs": { "type": ["integer", "null"] },
        "lastBuildAt": { "type": ["string", "null"] }
      }
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": { "type": "string" },
          "version": { "type": ["string", "null"] },
          "reproducible": { "type": ["boolean", "null"] },
          "sha256": { "type": ["string", "null"] },
          "sizeBytes": { "type": ["integer", "null"] },
          "warnings": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "release": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "changelog": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "baseTag": { "type": ["string", "null"] },
            "warnings": {
              "type": "array",
              "items": { "type": "string" }
            },
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "type": { "type": "string" },
                  "scope": { "type": ["string", "null"] },
                  "description": { "type": ["string", "null"] },
                  "breaking": { "type": ["boolean", "null"] }
                }
              }
            }
          }
        }
      }
    }
  }
}
